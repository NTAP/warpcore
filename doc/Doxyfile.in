# https://tty1.net/blog/2014/cmake-doxygen_en.html

PROJECT_NAME           = "@CMAKE_PROJECT_NAME@"
PROJECT_NUMBER         = @PROJECT_VERSION@
STRIP_FROM_PATH        = @PROJECT_SOURCE_DIR@ \
                         @PROJECT_BINARY_DIR@ \
                         @PROJECT_SOURCE_DIR@/lib \
                         @PROJECT_BINARY_DIR@/lib
INPUT                  = @PROJECT_SOURCE_DIR@/lib \
                         @PROJECT_BINARY_DIR@/lib
FILE_PATTERNS          = *.h \
                         *.c \
                         *.cc
EXCLUDE_PATTERNS       = @PROJECT_SOURCE_DIR@/lib/deps \
                         @PROJECT_BINARY_DIR@/lib/deps
EXAMPLE_PATH           = @PROJECT_SOURCE_DIR@/bin
RECURSIVE              = YES
EXTRACT_ALL            = YES
EXTRACT_STATIC         = YES
OPTIMIZE_OUTPUT_FOR_C  = YES
GENERATE_LATEX         = NO
JAVADOC_AUTOBRIEF      = YES

HAVE_DOT               = @DOXYGEN_DOT_FOUND@
#DOT_IMAGE_FORMAT       = svg
#INTERACTIVE_SVG        = YES
DOT_TRANSPARENT        = YES
DOT_MULTI_TARGETS      = YES
CALL_GRAPH             = YES
#CALLER_GRAPH           = YES

ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = YES
PREDEFINED             = __attribute__(x)=

INPUT                  += @PROJECT_SOURCE_DIR@/README.md
USE_MDFILE_AS_MAINPAGE = @PROJECT_SOURCE_DIR@/README.md
